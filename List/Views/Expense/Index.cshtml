@model IEnumerable<List.Models.Expense>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Masraflar Listesi</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Expense" asp-action="Create"class="btn btn-success">Yeni Giderler</a>
        </div>
    </div>
    <br />

  @if (Model.Count() > 0) 
    { 
      <table class="table table-bordered table-striped" style="width:100%">
          <thead>
          <tr>
              <th>Masraf</th>
              <th>Fiyat</th>
              <th>
                  Değişiklikler
              </th>
                 
          </tr>
         
          </thead>
          <tbody>
              @foreach(var expense in Model)
                {
               <tr>
                  <td width="35%">@expense.ExpenseName</td>
                  <td width="35%">@expense.Amount</td>
                  <td width="30%"> <div class="w-100 btn-group"role="group">
                          <a asp-controller="Expense" asp-action="Update" asp-route-Id="@expense.Id" class="btn btn-info mx-2">Güncelle</a>
                          <a asp-controller="Expense" asp-action="Delete"asp-route-Id="@expense.Id" class="btn btn-danger mx-2">Sil</a>
                      
                      </div>
                  </td>

                   

</tr>
                }
          </tbody>
      </table>
    }
            else
            {
                <p>Henüz Eşya Yok</p>
            }
</div>