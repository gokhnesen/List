@model IEnumerable<List.Models.Item>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Satılan Eşya Listesi</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Item" asp-action="Create"class="btn btn-success">Yeni Eşya Oluşturma</a>
        </div>
    </div>
    <br />

  @if (Model.Count() > 0) 
    { 
      <table class="table table-bordered table-striped" style="width:100%">
          <thead>
              <tr>
                  <th>Eşya Adı</th>
                  <th>Satın Alan</th>
                  <th>Gönderen</th>
              </tr>
          </thead>
          <tbody>
              @foreach(var item in Model)
                {
              <tr>
                  <td width="30%">@item.ItemName</td>
                  <td width="30%">@item.Buyer</td>
                  <td width="30%">@item.Lender</td>

                  
              </tr>
                }
          </tbody>
      </table>
    }
            else
            {
                <p>Henüz Eşya Yok</p>
            }
</div>